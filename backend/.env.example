# Email Service Configuration (Resend)
# Get your API key from: https://resend.com/
RESEND_API_KEY=your_resend_api_key_here

# Email Configuration
FROM_EMAIL=noreply@farmersboot.com
APP_URL=http://localhost:3000

# Local server ports
BACKEND_PORT=8787
TEST_BASE_URL=http://localhost:8787

# Security & Monitoring
# JWT signing secret (keep secret in production - use a secret manager)
JWT_SECRET=replace_with_a_strong_secret

# Optional: Sentry DSN for error reporting. Leave blank if not using.
SENTRY_DSN=

# Test mode: when enabled, the password reset endpoint can include
# the generated reset link in the response when called with ?debug=1 or
# header X-TEST-MODE=1. ONLY enable in test/staging environments.
# Set to '1' or 'true' to enable.
TEST_ENABLE_RESET_LINK_TO_RESPONSE=0

# Optional: For production, set these
# RESEND_API_KEY=re_your_production_api_key
# FROM_EMAIL=noreply@yourdomain.com
# APP_URL=https://yourdomain.com
# JWT_SECRET=replace_with_a_strong_secret
# SENTRY_DSN=your_sentry_dsn_here
# TEST_ENABLE_RESET_LINK_TO_RESPONSE=0